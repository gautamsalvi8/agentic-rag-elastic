# Copy to secrets.toml and fill in. Get client_id and client_secret from Google Cloud Console.
# https://console.cloud.google.com/apis/credentials → Create OAuth 2.0 Client (Web application)
# Add redirect URI: http://localhost:8501/oauth2callback (or your app URL + /oauth2callback)

[auth]
redirect_uri = "http://localhost:8501/oauth2callback"
cookie_secret = "your-random-secret-at-least-32-chars"
client_id = "xxx.apps.googleusercontent.com"
client_secret = "xxx"
server_metadata_url = "https://accounts.google.com/.well-known/openid-configuration"
# Optional: force "Choose an account" screen when user has multiple Google accounts
# client_kwargs = { prompt = "select_account" }

# Elasticsearch (Streamlit Cloud / when not using .env)
# Get URL and API key from Elastic Cloud: https://cloud.elastic.co → your deployment → API Keys
# ELASTIC_URL = "https://your-deployment.es.region.gcp.elastic.cloud:443"
# ELASTIC_API_KEY = "your-base64-api-key-from-elastic-console"

# Groq (optional; for fast responses)
# USE_GROQ_API = "true"
# GROQ_API_KEY = "gsk_xxxx"
